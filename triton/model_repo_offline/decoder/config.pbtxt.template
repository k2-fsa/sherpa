name: "decoder"
backend: "onnxruntime"
default_model_filename: "decoder.onnx"

max_batch_size: MAX_BATCH
input [
  {
    name: "y"
    data_type: TYPE_INT64
    dims: [DECODER_CONTEXT_SIZE]
  }
]

output [
  {
    name: "decoder_out"
    data_type: TYPE_FP32
    dims: [DECODER_DIM] 
  }
]

dynamic_batching {
  }

instance_group [
    {
      count: DECODER_INSTANCE_NUM
      kind: KIND_GPU
    }
]
