name: "encoder"
backend: "onnxruntime"
default_model_filename: "encoder.onnx"

max_batch_size: MAX_BATCH
input [
  {
    name: "x"
    data_type: TYPE_FP32
    dims: [-1, 80]
  },
  {
    name: "x_lens"
    data_type: TYPE_INT64
    dims: [1]
    reshape: { shape: [ ] }
  }
]
output [
  {
    name: "encoder_out"
    data_type: TYPE_FP32
    dims: [-1, ENCODER_DIM]
  },
  {
    name: "encoder_out_lens"
    data_type: TYPE_INT64
    dims: [1]
    reshape: { shape: [ ] }
  }
]

dynamic_batching {
  }

instance_group [
    {
      count: ENCODER_INSTANCE_NUM
      kind: KIND_GPU
    }
]
